@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model DeletePersonalDataModel
@{
    ViewData["Title"] = @localizer["Delete Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    ViewData["Caption"] = @localizer["Gerir perfil e dados pessoais."];
}

<div class="row">
    <div class="col-md-6">
        <form id="delete-user" method="post" asp-route-userId="@Model.Input.Id"  class="form-group">
            <div class="card">
                <div class="card-header">
                    <h4>@localizer["Delete user"]</h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="@Model.Input.Id" class="form-control" hidden />

                    <div class="alert alert-warning" role="alert">
                        <p>
                            <strong>@localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
                        </p>
                    </div>

                    @if (Model.RequirePassword)
                    {
                        <div class="form-floating mb-3">
                            <input id="floatingPassword" asp-for="@Model.Input.Password" type="password" class="form-control" placeholder="name@example.com">
                            <label class="col-form-label" for="floatingPassword">@localizer["Password"]</label>
                            <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
                        </div>
                    }

                </div>
                <div class="card-footer">
                    <button class="btn btn-danger" type="submit">
                        @localizer["Delete data and close my account"]
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}