@page

@using LVLgroupApp.Views.Shared.Components.HeaderPage;
@using LVLgroupApp.Views.Shared.Components.Footer;
@using LVLgroupApp.Views.Shared.Components.Theme;

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = @localizer["Reset password confirmation"];
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>
    <partial name="_Styles" />
</head>

<body>

    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section"></div>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100">
        @(await Component.InvokeAsync<HeaderPageViewComponent>())
        <div class="container">
            <div class="row justify-content-center">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mt-5">@localizer["Reset password confirmation"]</h1>
                </div>
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card border-0">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-1 d-lg-block text-center">
                                </div>
                                <div class="col-lg-10 d-lg-block text-center">
                                    <div style="padding-top:3rem !important;">
                                        @localizer["Your password has been reset. Please"] <a asp-page="./Login">@localizer["click here to log in"]</a>.
                                    </div>
                                </div>
                                <div class="col-lg-1 d-lg-block text-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @(await Component.InvokeAsync<ThemeViewComponent>())
        @(await Component.InvokeAsync<FooterViewComponent>())
    </div>

    <partial name="_Scripts" />
    @await Component.InvokeAsync("Notyf")
</body>
</html>
