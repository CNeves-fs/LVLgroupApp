@page

@using LVLgroupApp.Views.Shared.Components.HeaderPage;
@using LVLgroupApp.Views.Shared.Components.Footer;
@using LVLgroupApp.Views.Shared.Components.Theme;

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model RegisterModel
@{
    ViewData["Title"] = @localizer["Registrar"];
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>
    <partial name="_Styles" />
</head>

<body>

    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section"></div>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100">
        @(await Component.InvokeAsync<HeaderPageViewComponent>())
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-8 col-xl-10 col-lg-8 col-md-9 pt-5">
                    <div class="card border-0">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block text-center">
                                    <img id="register-logo" class="img-fluid" src="~/images/bg-register-portal.png" />
                                </div>
                                <div class="col-lg-6 pt-0">

                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">@localizer["Registrar"]</h1>
                                        </div>
                                        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                            <small><div asp-validation-summary="All" class="text-danger"></div></small>

                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <div class="form-floating mb-3">
                                                        <input id="floatingInputName" asp-for="Input.FirstName" type="text" class="form-control" placeholder="name@example.com">
                                                        <label for="floatingInputName">@localizer["Nome"]</label>
                                                        <small><span asp-validation-for="Input.FirstName" class="text-danger"></span></small>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <div class="form-floating mb-3">
                                                        <input id="floatingInputLastName" asp-for="Input.LastName" type="text" class="form-control" placeholder="name@example.com">
                                                        <label for="floatingInputLastName">@localizer["Apelido"]</label>
                                                        <small><span asp-validation-for="Input.LastName" class="text-danger"></span></small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12 mb-3 mb-sm-0">
                                                    <div class="form-floating mb-3">
                                                        <input id="floatingInputEmail" asp-for="Input.Email" type="email" class="form-control" placeholder="name@example.com">
                                                        <label for="floatingInputEmail">@localizer["Endereço email"]</label>
                                                        <small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12 mb-3 mb-sm-0">
                                                    <div class="form-floating mb-3">
                                                        <input id="floatingInputPassword" asp-for="Input.Password" type="password" class="form-control" placeholder="name@example.com">
                                                        <label for="floatingInputPassword">@localizer["Palavra-passe"]</label>
                                                        <small><span asp-validation-for="Input.Password" class="text-danger"></span></small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-12 mb-3 mb-sm-0">
                                                    <div class="form-floating mb-3">
                                                        <input id="floatingInputConfirmPassword" asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="name@example.com">
                                                        <label for="floatingInputConfirmPassword">@localizer["Repetir palavra-passe"]</label>
                                                        <small><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span></small>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary bg-gradient-primary w-100 my-4 mb-2">@localizer["Registar conta"]</button>
                                            </div>
                                        </form>

                                        <hr>

                                        <div class="text-center">
                                            <a class="small" asp-area="Identity" asp-page="/account/forgotpassword"> @localizer["Esqueceu-se da palavra-passe?"]</a>
                                        </div>
                                        <div class="text-center">
                                            <a class="small" asp-area="Identity" asp-page="/account/login"> @localizer["Já possui uma conta? Inicie sessão!"]</a>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @(await Component.InvokeAsync<ThemeViewComponent>())
        @(await Component.InvokeAsync<FooterViewComponent>())
    </div>
    <partial name="_Scripts" />
@*    <script type="text/javascript" language=javascript>
        $.validator.unobtrusive.parse(document);
    </script>*@
    @await Component.InvokeAsync("Notyf")
</body>
</html>