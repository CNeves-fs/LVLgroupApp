@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Core.Constants
@using LVLgroupApp.Areas.Business.Models.Empresa
@model EmpresaViewModel

<form id="create-form" method="post" asp-area="Business" asp-controller="Empresa" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this, event, false);" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @*<label class="col-form-label">@localizer["LogoPicture"]</label>*@
                @if (Model.LogoPicture != null && Model.LogoPicture.Length > 0)
                {
                    <img id="logoPicture" class="img-fluid mb-2" style="cursor: pointer;" src="data:image/*;base64,@(Convert.ToBase64String(Model.LogoPicture))">
                }
                else
                {
                    <img id="logoPicture" class="img-fluid" style="cursor: pointer;" src="~/images/no-image-icon.png">
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="row pb-3">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input id="Nome" id="Nome" asp-for="Nome" type="text" class="form-control" placeholder="name@example.com">
                        <label class="col-form-label" for="Nome">@localizer["Nome"]</label>
                        <small><span asp-validation-for="Nome" class="text-danger"></span></small>
                    </div>
                </div>
            </div>
            <div class="row pb-3">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input id="NomeCurto" asp-for="NomeCurto" type="text" class="form-control" onkeyup="this.value = this.value.toUpperCase();" placeholder="name@example.com">
                        <label class="col-form-label" for="NomeCurto">@localizer["NomeCurto"]</label>
                        <small><span asp-validation-for="NomeCurto" class="text-danger"></span></small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="custom-file col-md-6">
            <input accept=".png,.jpg,.jpeg,.gif,.tif"
                   asp-for="LogoPicture"
                   type="file" class="custom-file-input"
                   onchange="document.getElementById('logoPicture').src = window.URL.createObjectURL(this.files[0])"
                   id="customFile" hidden>
        </div>
        <span asp-validation-for="LogoPicture" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Empresas.Edit)).Result.Succeeded)
        {
            <button type="submit" class="btn btn-success">@localizer["Salvar"]</button>
        }
        <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">@localizer["Cancelar"]</button>
    </div>
</form>


<!-- jquery-validation translated messages -->
@{
    string messageFile = @localizer["messages_pt.js"].Value;
    string url = "/lib/jquery-validation/" + messageFile;
}
<script type="text/javascript" src=@url></script>


<script type="text/javascript" language=javascript>

    $("#create-form").removeData("validator");

    jQuery.validator.addMethod("uppercaseonly", function (value, element) {
        return this.optional(element) || /^[A-Z]*$/.test(value);
    });

    $("#create-form").validate({
        rules: {
            Nome: {
                required: true
            },
            NomeCurto: {
                required: true,
                uppercaseonly: true,
                minlength: 3,
                maxlength: 3
            }
        },
        errorElement: "div",
        errorPlacement: function (error, element) {
            error.addClass("invalid-feedback");
            error.insertAfter(element);
        },
        highlight: function (element) {
            $(element).removeClass('is-valid').addClass('is-invalid');
        },
        unhighlight: function (element) {
            $(element).removeClass('is-invalid').addClass('is-valid');
        }
    });

</script>

<script>
    $('#logoPicture').click(function () {
        $('#customFile').trigger('click');
    });

    $("#deletePicture").on("click", function () {
        alert("delete logo picture!");
    });
</script>