@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Core.Constants
@using LVLgroupApp.Areas.Artigo.Models.Gender
@model IEnumerable<GenderViewModel>

<style>
    table.dataTable thead th {
        vertical-align: middle !important;
    }
</style>

<table id="genderTable" class="table table-striped table-bordered dt-responsive display hover" width="100%" cellspacing="0">
    <thead> 
        <tr>
            <th>@localizer["Id"]</th>
            <th>@localizer["Nome"]</th>
            <th>@localizer["Tamanhos numéricos"]</th>
            <th>@localizer["Tamanhos alfanuméricos"]</th>
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Delete)).Result.Succeeded
               || (AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Edit)).Result.Succeeded)
            {
                <th>@localizer["Ações"]</th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var gender in Model)
        {
        <tr>
            <td>
                @gender.Id
            </td>
            <td>
                @gender.Nome
            </td>
            <td>
                @gender.TamanhosNum
            </td>
            <td>
                @gender.TamanhosAlf
            </td>
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Delete)).Result.Succeeded
                ||    (AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Edit)).Result.Succeeded)
            {
                <td text-right">
                        <div class="btn-group dropend">
                            <button id="dropdown_@gender.Id" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @localizer["Ação"]
                            </button>
                            <ul class="dropdown-menu dropdown-menu-table shadow animated--grow-in" aria-labelledby="dropdown_@gender.Id">
                            <li>
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Edit)).Result.Succeeded)
                                {
                                    <a onclick="jQueryModalGet('/artigo/gender/OnGetCreateOrEdit?id=@gender.Id','@localizer["Editar género"]', event, 'modal-xl')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  @localizer["Editar"]</a>
                                }
                            </li>
                            <li>
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Delete)).Result.Succeeded)
                                {
                                    <form id="form_delete_@gender.Id" asp-area="Artigo" asp-controller="Gender" method="post" asp-action="OnPostDelete" asp-route-id="@gender.Id" onsubmit="return jQueryModalDelete(this, event, '@localizer["Tem a certeza que pretende remover este género?"]')">
                                        <a href="javascript:$('#form_delete_@gender.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  @localizer["Remover"]</a>
                                    </form>
                                }
                            </li>
                        </ul>
                    </div>
                </td>
            }
        </tr>
        }
    </tbody>
</table>


<script>

    $(document).ready(function () {

        var logo = getLVLlogo('logo-lvl-dark.png');

        var options = {
            isEnabled: true,
            saveState: false
        };

        var languagePath = '@Url.Content("~/lib/datatables/localizer/")';
        var languageFile = '@localizer["Portuguese.json"]';
        var _language = languagePath + languageFile;

        var table = $("#genderTable").DataTable({
            dom: "<'row'<'col-sm-12 col-md-4'B><'col-sm-12 col-md-4 mt-1'l><'col-sm-12 col-md-4 mt-1'f>>" +
                "<'row'<'col-sm-12't>>" +
                "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 mt-3'p>>",
            stateSave: true,
            //scrollX: true,
            //scrollY: true,
            responsive: false,
            fixedHeader: {
                header: true,
                headerOffset: $('#navigationBar').height()
            },
            language: {
                url: _language
            },
            lengthMenu: [
                [20, 50, 100, 500, 1000, -1],
                [20, 50, 100, 500, 1000, '@localizer["Todos"]'],
            ],
            buttons: [
                {
                    extend: 'copy',
                    text: '<i class="fas fa-copy"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de tamanhos por género"]'
                },
                {
                    extend: 'pdf',
                    text: '<i class="fas fa-file-pdf"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de tamanhos por género"]',
                    customize: function (doc) {
                        doc.content.splice(1, 0, {
                            margin: [0, 0, 0, 12],
                            alignment: 'center',
                            image: 'data: image/*;base64,' + logo,
                            fit: [100, 100]
                        });
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fas fa-file-excel"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de tamanhos por género"]'
                },
                {
                    extend: 'print',
                    text: '<i class="fas fa-print"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de tamanhos por género"]'
                },
                {
                    extend: 'colvis',
                    text: '<i class="fas fa-eye-slash"></i>',
                }
            ],
            order: [[0, "desc"]],
            columnDefs: [
                { visible: false, targets: [0] }
            ]
        });

        $('#genderTable').on('show.bs.dropdown', function () {
            $('.dataTables_scrollBody').addClass('dropdown-visible');
            $('.dataTables_scrollHead').addClass('dropdown-visible');
        })
        .on('hide.bs.dropdown', function () {
            $('.dataTables_scrollBody').removeClass('dropdown-visible');
            $('.dataTables_scrollHead').removeClass('dropdown-visible');
        });

        $('#genderTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

        $('#genderTable tbody').on('dblclick', 'tr', function () {
            $(this).addClass('selected');
            var data = table.row(this).data();
            //alert('You clicked on ' + data[0] + '\'s row');
            jQueryModalGet('/artigo/gender/OnGetCreateOrEdit?id=' + data[0], '@localizer["Editar género"]', event, 'modal-xl')
        });

        function getLVLlogo(logoName) {

            let _logoName = logoName;
            let _url = "/Claim/Foto/GetLVLlogo?logoName=_logoName";
            let formData = new FormData();
            formData.append("logoName", _logoName);

            $.ajax(
                {
                    type: "POST",
                    url: _url,
                    processData: false,
                    contentType: false,
                    data: formData,
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == "success") {
                            logo = data.logoBase64;
                            //alert(logo);
                        }
                    },
                    error: function () {
                        alert("getLVLlogo: Error occurs");
                    }
                }
            );

        };

    });
</script>