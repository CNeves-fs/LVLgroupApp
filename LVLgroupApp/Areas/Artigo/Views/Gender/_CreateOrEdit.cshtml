@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Core.Constants
@using LVLgroupApp.Areas.Artigo.Models.Gender
@model GenderViewModel

<form id="create-form" method="post" asp-area="Artigo" asp-controller="Gender" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this, event, false);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="row pb-3">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input id="Nome" name="Nome" asp-for="@Model.Nome" type="text" class="form-control" placeholder="name@example.com">
                        <label class="col-form-label" for="Nome">@localizer["Nome"]</label>
                        <small><span asp-validation-for="@Model.Nome" class="text-danger"></span></small>
                    </div>
                </div>
            </div>
            <div class="row pb-3">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input id="TamanhosAlf" name="TamanhosAlf" asp-for="@Model.TamanhosAlf" type="text" class="form-control" placeholder="name@example.com">
                        <label class="col-form-label" for="TamanhosAlf">@localizer["Tamanhos alfanuméricos"]</label>
                        <small><span asp-validation-for="@Model.TamanhosAlf" class="text-danger"></span></small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <textarea id="TamanhosNum" name="TamanhosNum" asp-for="@Model.TamanhosNum" type="text" class="form-control" placeholder="Utilize ; como separador" wrap="soft" style="height: 125px;"></textarea>
                <label class="col-form-label" for="TamanhosNum">@localizer["Tamanhos numéricos"]</label>
                <small><span asp-validation-for="@Model.TamanhosNum" class="text-danger"></span></small>
            </div>
        </div>
    </div>

    <br/>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Genders.Edit)).Result.Succeeded)
        {
            <button type="submit" class="btn btn-success">@localizer["Salvar"]</button>
        }
        <button type="button" class="btn btn-secondary close-button" data-bs-dismiss="modal">@localizer["Cancelar"]</button>
    </div>
</form>


<!-- jquery-validation translated messages -->
@{
    string messageFile = @localizer["messages_pt.js"].Value;
    string url = "/lib/jquery-validation/" + messageFile;
}
<script type="text/javascript" src=@url></script>


<script type="text/javascript" language=javascript>

    $("#create-form").removeData("validator");

    $("#create-form").validate({
        rules: {
            Nome: {
                required: true
            },
            TamanhosAlf: {
                required: true
            },
            TamanhosNum: {
                required: true
            }
        },
        errorElement: "div",
        errorPlacement: function (error, element) {
            error.addClass("invalid-feedback");
            error.insertAfter(element);
        },
        highlight: function (element) {
            $(element).removeClass('is-valid').addClass('is-invalid');
        },
        unhighlight: function (element) {
            $(element).removeClass('is-invalid').addClass('is-valid');
        }
    });

</script>