@using LVLgroupApp.Areas.Admin.Models
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<UserViewModel>

<table id="userTable" class="table table-striped dt-responsive nowrap display hover" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @localizer["Id"]
            </th>
            <th>
                @localizer["Utilizador"]
            </th>
            <th>
                @localizer["E-mail"]
            </th>
            <th>
                @localizer["Status"]
            </th>
            <th>
                @localizer["Empresa"]
            </th>
            <th>
                @localizer["Grupoloja"]
            </th>
            <th>
                @localizer["Loja"]
            </th>
            <th style="width:10%">
                @localizer["Ações"]
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td>
                    <div class="row">
                        @if (@user.ProfilePicture != null && user.ProfilePicture.Length > 0)
                        {
                            <div class="col-sm" style=" max-width: 80px;margin-right: 20px;">
                                <img class="img-profile rounded-circle" style="height: 60px;width:60px;object-fit: cover;" src="data:image/*;base64,@(Convert.ToBase64String(@user.ProfilePicture))">
                            </div>
                        }
                        else
                        {
                            <div class="col-sm" style="max-width:80px; margin-right: 20px;">
                                <img class="img-profile rounded-circle" style="height: 60px;width:60px;object-fit: cover;" src="~/images/default-user.png">
                            </div>
                        }
                        <div class="col-sm">
                            <span>@user.FirstName @user.LastName</span>
                            <br>
                            <small>
                                @user.Id
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <span>@user.Email</span>
                    <br>
                    <small>
                        @if (user.EmailConfirmed)
                        {
                            <span class="badge text-bg-success">@localizer["E-mail confirmado"]</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger">@localizer["E-mail não confirmado"]</span>
                        }
                    </small>
                </td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge text-bg-success">@localizer["Ativo"]</span>
                    }
                    else
                    {
                        <span class="badge text-bg-danger">@localizer["Desativado"]</span>
                    }
                    <br/>
                    <span class="badge text-bg-info mt-2">@user.RoleName</span>
                </td>
                <td>
                    @user.NomeEmpresa
                </td>
                <td>
                    @user.NomeGrupoloja
                </td>
                <td>
                    @user.NomeLoja
                </td>
                <td>
                    <div class="btn-group dropend">
                        <button id="dropdown_@user.Id" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @localizer["Ação"] <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-table shadow animated--grow-in" aria-labelledby="dropdown_@user.Id">
                            <li>
                                <a style='margin-right:16px' asp-area="Identity" asp-page="/Profile" asp-route-userId="@user.Id" class="dropdown-item">
                                    <i class="fas fa-cogs"></i>&nbsp; @localizer["Defenições"]
                                </a>
                            </li>
                            <li>
                                <a style='margin-right:16px' asp-area="Identity" asp-page="/Account/Manage/Index" asp-route-userId="@user.Id" class="dropdown-item">
                                    <i class="fas fa-user"></i>&nbsp; @localizer["Perfil"]
                                </a>
                            </li>
                            <li>
                                <a style='margin-right:16px' asp-controller="UserRole" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                    <i class="fas fa-wrench"></i>&nbsp; @localizer["Gestão de funções"]
                                </a>
                            </li>
                            <li>
                                <a style='margin-right:16px' asp-area="Identity" asp-page="/Account/AuditLog" asp-route-userId="@user.Id" class="dropdown-item">
                                    <i class="fas fa-list"></i>&nbsp; @localizer["Logs atividade"]
                                </a>
                            </li>
                            <li>
                                <form id="form_delete_@user.Id" asp-controller="User" method="post" asp-action="OnPostDelete" asp-route-id="@user.Id" onsubmit="return jQueryModalDelete(this, event, '@localizer["Tem a certeza que pretende remover este utilizador?"]')" class="d-inline">
                                    <a href="javascript:$('#form_delete_@user.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i> @localizer["Remover"]</a>
                                </form>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>

    $(document).ajaxStop(function () {
        $.busyLoadFull("hide");
    });

    $(document).ready(function () {

        var logo = getLVLlogo('logo-lvl-dark.png');

        var options = {
            isEnabled: true,
            saveState: false
        };

        var languagePath = '@Url.Content("~/lib/datatables/localizer/")';
        var languageFile = '@localizer["Portuguese.json"]';
        var _language = languagePath + languageFile;

        var table = $("#userTable").DataTable({
            dom: "<'row'<'col-sm-12 col-md-4'B><'col-sm-12 col-md-4 mt-1'l><'col-sm-12 col-md-4 mt-1'f>>" +
                 "<'row'<'col-sm-12't>>" +
                 "<'row'<'col-sm-12 col-md-5 mt-3'i><'col-sm-12 col-md-7 mt-3'p>>",
            stateSave: true,
            //scrollX: true,
            //scrollY: true,
            responsive: false,
            fixedHeader: {
                header: true,
                headerOffset: $('#navigationBar').height()
            },
            language: {
                url: _language
            },
            lengthMenu: [
                [20, 50, 100, 500, 1000, -1],
                [20, 50, 100, 500, 1000, '@localizer["Todos"]'],
            ],
            buttons: [
                {
                    extend: 'copy',
                    text: '<i class="fas fa-copy"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de utilizadores"]'
                },
                {
                    extend: 'pdf',
                    text: '<i class="fas fa-file-pdf"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de utilizadores"]',
                    customize: function (doc) {
                        doc.content.splice(1, 0, {
                            margin: [0, 0, 0, 12],
                            alignment: 'center',
                            image: 'data: image/*;base64,' + logo,
                            fit: [100, 100]
                        });
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fas fa-file-excel"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de utilizadores"]'
                },
                {
                    extend: 'print',
                    text: '<i class="fas fa-print"></i>',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    },
                    title: '@localizer["Lista de utilizadores"]'
                },
                {
                    extend: 'colvis',
                    text: '<i class="fas fa-eye-slash"></i>',
                }
            ],
            order: [[0, "desc"]],
            columnDefs: [
                { visible: false, targets: [0] }
            ]
        });

        $('#userTable').on('show.bs.dropdown', function () {
            $('.dataTables_scrollBody').addClass('dropdown-visible');
            $('.dataTables_scrollHead').addClass('dropdown-visible'); 
        })
        .on('hide.bs.dropdown', function () {
            $('.dataTables_scrollBody').removeClass('dropdown-visible');
            $('.dataTables_scrollHead').removeClass('dropdown-visible');
        });

        $('#userTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

        $('#userTable tbody').on('dblclick', 'tr', function () {
            $(this).addClass('selected');
            var data = table.row(this).data();
            window.location.href = '/Identity/Profile?userId=' + data[0];
        });

        function getLVLlogo(logoName) {

            let _logoName = logoName;
            let _url = "/Claim/Foto/GetLVLlogo?logoName=_logoName";
            let formData = new FormData();
            formData.append("logoName", _logoName);

            $.ajax(
                {
                    type: "POST",
                    url: _url,
                    processData: false,
                    contentType: false,
                    data: formData,
                    dataType: 'json',
                    success: function (data) {
                        if (data.status == "success") {
                            logo = data.logoBase64;
                            //alert(logo);
                        }
                    },
                    error: function () {
                        alert("getLVLlogo: Error occurs");
                    }
                }
            );

        };

    });

</script>